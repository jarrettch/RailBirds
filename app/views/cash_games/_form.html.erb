<% if @cash_game.errors.any? %>
  <div class="alert alert-danger alert-dismissable">
    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
    <h4><%= pluralize(@cash_game.errors.count, "error") %> prohibited this session from being saved:</h4>

    <ul>
    <% @cash_game.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @cash_game, html: {class: "form-horizontal", role: "form"} do |game| %>
  <div class="form-group">
    <%= game.label :start_session, :class => "col-sm-2 control-label" %>
    <div class="input-group date col-sm-4" id="datetimepicker1" data-date-format="YYYY/MM/DD hh:mm A">
    <%= game.text_field :start_session, :class => "form-control" %><span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    </div>
  </div>
  <div class="form-group">
    <%= game.label :end_session, :class => "col-sm-2 control-label" %>
    <div class="input-group date col-sm-4" id="datetimepicker2" data-date-format="YYYY/MM/DD hh:mm A">
    <%= game.text_field :end_session, :class => "form-control" %><span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
                    </span>
                    </div>
  </div>
  <div class="form-group">
    <%= game.label :location, :class => "col-sm-2 control-label" %>
    <div class="input-group col-sm-4">
    <%= game.text_field :location, :class => "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group">
    <%= game.label :game, :class => "col-sm-2 control-label" %>
    <div class="input-group col-sm-4">
    <%= game.text_field :game, :class => "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group">
    <%= game.label :buyin_and_rebuys, :class => "col-sm-2 control-label" %>
    <div class="input-group col-sm-4">
    <%= game.text_field :buyin_and_rebuys, :class => "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group">
    <%= game.label :cash_out, :class => "col-sm-2 control-label" %>
    <div class="input-group col-sm-4">
    <%= game.text_field :cash_out, :class => "form-control col-sm-4" %>
    </div>
  </div>
  <div class="form-group">
    <%= game.label :notes, :class => "col-sm-2 control-label" %>
    <div class="input-group col-sm-4">
    <%= game.text_area :notes, :class => "form-control col-sm-4" %>
    </div>
  </div>

    <%= game.submit 'submit', :class => "btn btn-default" %>
<% end %>
<%= link_to 'Back', cash_games_path %>

<script>
  $(function() {
    $("#datetimepicker1").datetimepicker();
    $("#datetimepicker2").datetimepicker();
  });
</script>